<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.devcloud.accent" >

  <application
      android:allowBackup="true"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme" >

    <activity
        android:name="org.devcloud.accent.MainActivity"
        android:label="@string/app_name" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>


    <activity
        android:name="org.devcloud.accent.DisplayMessageActivity"
        android:label="@string/title_activity_display_message" >
      android:parentActivityName="org.devcloud.accent.MainActivity" >
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="org.devcloud.accent.MainActivity" />
    </activity>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
  </application>
</manifest>